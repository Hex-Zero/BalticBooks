@page
@model BalticBooks.Pages.Orders.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Order.OrderDate" class="control-label"></label>
                <input asp-for="Order.OrderDate" class="form-control" />
                <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Customer" class="control-label"></label>
                <select asp-for="Order.Customer" asp-items="Model.Options" class="form-control"></select>
                <span asp-validation-for="Order.Customer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" value="Add Order Line" class="btn btn-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <div class="btn btn-outline-primary back-button-backgroud">
                    <a class="back-button" asp-page="Index">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
