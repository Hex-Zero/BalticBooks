@page
@model BalticBooks.Pages.Suppliers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Supplier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Supplier.Id" />
            <div class="form-group">
                <label asp-for="Supplier.SupplierName" class="control-label"></label>
                <input asp-for="Supplier.SupplierName" class="form-control" />
                <span asp-validation-for="Supplier.SupplierName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.SupplierEmail" class="control-label"></label>
                <input asp-for="Supplier.SupplierEmail" class="form-control" />
                <span asp-validation-for="Supplier.SupplierEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
